using System;

namespace project3
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] D = new int[] { 1, 2, 5, 8, 3, 4, 13 };
            int sum = 0;
            for(int i = 0;i < D.Length;i++)
            {
                Console.Write(D[i]);
                if (i % 2 ==0)
                {
                    sum += D[i];
                }
            }
            Console.WriteLine("\n"+sum);
            
        }
       
    }
}
